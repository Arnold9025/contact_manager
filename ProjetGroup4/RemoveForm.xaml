<Window x:Class="ProjetGroup4.RemoveForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetGroup4"
        mc:Ignorable="d"
        Title="RemoveForm" Height="200" Width="400">
    <Grid>
        <Label Content="Voulez vous vraiment supprimer le contact" HorizontalAlignment="Left" VerticalAlignment="Top" Height="29" Width="244" Margin="93,36,0,0"/>
        <TextBlock x:Name="confirmDelete" Text="NN" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <Button Content="Yes" Width="100" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Background="red" x:Name="Yes" Click="Yes_Click"></Button>
        <Button Content="No" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Background="Green" x:Name="No"></Button>

    </Grid>
</Window>
